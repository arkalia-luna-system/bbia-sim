[run]
source = src/bbia_sim
branch = True
parallel = True
omit =
    */tests/*
    */test_*
    */__init__.py
    */__pycache__/*
    */venv/*
    */.venv/*
    */logs/*
    */reachy_repos/*
    */assets/*
    */htmlcov/*

[report]
show_missing = True
skip_covered = False
fail_under = 5
precision = 2

[paths]
source =
    src/bbia_sim
    */site-packages/bbia_sim