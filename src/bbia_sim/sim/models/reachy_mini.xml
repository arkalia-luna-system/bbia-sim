<mujoco model="reachy_mini">
  <compiler angle="radian" meshdir="../assets"/>
  
  <default>
    <joint armature="0.01" damping="1" limited="true"/>
    <geom contype="1" conaffinity="1" rgba="0.8 0.6 0.4 1"/>
  </default>
  
  <asset>
    <!-- Assets 3D peuvent être ajoutés ici -->
  </asset>
  
  <worldbody>
    <!-- Éclairage -->
    <light pos="0 0 1" diffuse="0.5 0.5 0.5" specular="0.5 0.5 0.5"/>
    
    <!-- Sol -->
    <geom name="floor" type="plane" size="1 1 0.1" rgba="0.9 0.9 0.9 1"/>

    <!-- Torse du robot -->
    <body name="torso" pos="0 0 0.5">
      <geom name="torso_geom" type="box" size="0.1 0.1 0.2" rgba="0.2 0.2 0.8 1"/>
      
      <!-- Tête -->
      <body name="head" pos="0 0 0.2">
        <joint name="neck_yaw" type="hinge" pos="0 0 0" axis="0 0 1" range="-1.57 1.57"/>
        <geom name="head_geom" type="sphere" size="0.08" rgba="0.8 0.2 0.2 1"/>
        <camera name="eye_camera" pos="0.05 0 0" euler="0 0 0"/>
      </body>
      
      <!-- Bras droit -->
      <body name="right_arm" pos="0 -0.15 0.1">
        <joint name="right_shoulder_pitch" type="hinge" pos="0 0 0" axis="0 1 0" range="-1.57 1.57"/>
        <geom name="right_upper_arm_geom" type="capsule" size="0.03" fromto="0 0 0 0 0 0.15" rgba="0.2 0.8 0.2 1"/>
        
        <body name="right_forearm" pos="0 0 0.15">
          <joint name="right_elbow_pitch" type="hinge" pos="0 0 0" axis="0 1 0" range="-1.57 1.57"/>
          <geom name="right_forearm_geom" type="capsule" size="0.025" fromto="0 0 0 0 0 0.15" rgba="0.2 0.5 0.2 1"/>
          
          <body name="right_gripper" pos="0 0 0.15">
            <joint name="right_gripper_joint" type="hinge" pos="0 0 0" axis="0 0 1" range="-0.5 0.5"/>
            <geom name="right_gripper_geom" type="box" size="0.02 0.01 0.01" rgba="0.5 0.5 0.5 1"/>
          </body>
        </body>
      </body>
      
      <!-- Bras gauche -->
      <body name="left_arm" pos="0 0.15 0.1">
        <joint name="left_shoulder_pitch" type="hinge" pos="0 0 0" axis="0 1 0" range="-1.57 1.57"/>
        <geom name="left_upper_arm_geom" type="capsule" size="0.03" fromto="0 0 0 0 0 0.15" rgba="0.2 0.8 0.2 1"/>
        
        <body name="left_forearm" pos="0 0 0.15">
          <joint name="left_elbow_pitch" type="hinge" pos="0 0 0" axis="0 1 0" range="-1.57 1.57"/>
          <geom name="left_forearm_geom" type="capsule" size="0.025" fromto="0 0 0 0 0 0.15" rgba="0.2 0.5 0.2 1"/>
          
          <body name="left_gripper" pos="0 0 0.15">
            <joint name="left_gripper_joint" type="hinge" pos="0 0 0" axis="0 0 1" range="-0.5 0.5"/>
            <geom name="left_gripper_geom" type="box" size="0.02 0.01 0.01" rgba="0.5 0.5 0.5 1"/>
          </body>
        </body>
      </body>
    </body>
  </worldbody>
  
  <actuator>
    <motor name="neck_yaw_motor" joint="neck_yaw" gear="100"/>
    <motor name="right_shoulder_pitch_motor" joint="right_shoulder_pitch" gear="100"/>
    <motor name="right_elbow_pitch_motor" joint="right_elbow_pitch" gear="100"/>
    <motor name="right_gripper_motor" joint="right_gripper_joint" gear="50"/>
    <motor name="left_shoulder_pitch_motor" joint="left_shoulder_pitch" gear="100"/>
    <motor name="left_elbow_pitch_motor" joint="left_elbow_pitch" gear="100"/>
    <motor name="left_gripper_motor" joint="left_gripper_joint" gear="50"/>
  </actuator>
</mujoco>