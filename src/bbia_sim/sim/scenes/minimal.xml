"""
Scène minimale pour tests rapides.

Cette scène contient uniquement le robot sans environnement complexe.
"""

<mujoco model="minimal_scene">
  <compiler angle="radian" meshdir="../assets"/>
  
  <default>
    <joint armature="0.01" damping="1" limited="true"/>
    <geom contype="1" conaffinity="1" rgba="0.8 0.6 0.4 1"/>
  </default>
  
  <worldbody>
    <light pos="0 0 1" diffuse="0.5 0.5 0.5" specular="0.5 0.5 0.5"/>
    <geom name="floor" type="plane" size="0.5 0.5 0.1" rgba="0.9 0.9 0.9 1"/>

    <body name="torso" pos="0 0 0.3">
      <geom name="torso_geom" type="box" size="0.05 0.05 0.1" rgba="0.2 0.2 0.8 1"/>
      
      <body name="head" pos="0 0 0.1">
        <joint name="neck_yaw" type="hinge" pos="0 0 0" axis="0 0 1" range="-1.57 1.57"/>
        <geom name="head_geom" type="sphere" size="0.04" rgba="0.8 0.2 0.2 1"/>
      </body>
    </body>
  </worldbody>
  
  <actuator>
    <motor name="neck_yaw_motor" joint="neck_yaw" gear="100"/>
  </actuator>
</mujoco>
