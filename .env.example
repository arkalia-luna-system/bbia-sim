# Configuration BBIA-SIM
# Copiez ce fichier vers .env et modifiez les valeurs selon votre environnement

# Environnement (dev/prod)
BBIA_ENV=dev

# Token d'authentification API (CHANGEZ EN PRODUCTION !)
BBIA_TOKEN=bbia-secret-key-dev

# Configuration serveur
BBIA_HOST=0.0.0.0
BBIA_PORT=8000
BBIA_RELOAD=true

# Configuration simulation
BBIA_SIM_MODEL_PATH=src/bbia_sim/sim/models/reachy_mini.xml
BBIA_SIM_HEADLESS=true
BBIA_SIM_STEP_FREQUENCY=0.01

# Configuration CORS (prod uniquement)
BBIA_CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Configuration logs
BBIA_LOG_LEVEL=INFO
BBIA_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Configuration télémétrie WebSocket
BBIA_TELEMETRY_FREQUENCY=10.0
BBIA_TELEMETRY_ENABLED=true
